<div class="reps-select container">
  <div class="col-sm-6 col-sm-offset-3">
    <form class="form-horizontal" action="/reps" method="post">
      <div class="form-group">
        <label class="reps-select-label" for="sel1">Select a rep:</label>
        <select class="form-control" id="sel1" name="bioguide_id">
          <% @reps.each do |rep| %>
            <option value="<%= rep.bioguide_id %>"><%= rep.official_full %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group tyr-modal-form-button">
        <div class="col-sm-12">
          <button type="submit" class="btn btn-primary btn-block">Select Rep</button>
        </div>
      </div>
    </form>
  </div>
  <div class="centered-text col-sm-6 col-sm-offset-3">
    <h3>- or -</h3>
  </div>
  <div class="col-sm-6 col-sm-offset-3">
    <form id="reps-geo-page-form" class="form-horizontal geo-complete-form" action="/reps/geo" method="post">
      <div class="col-sm-8">
        <div class="form-group form-address">
          <input name="address" type="text" class="geo-complete-input form-control form-input" placeholder="Find by location">
          <input name="lat" type="hidden" class="form-control form-input" value="">
          <input name="lng" type="hidden" value="">
        </div>
      </div>
      <div class="col-sm-4">
        <button type="submit" class="search-btn btn btn-primary btn-block">
          Search
        </button>
      </div>
    </form>
  </div>
</div>
