<% last_call = user.calls.last_call %>
<div class="tyr-card user-card col-sm-10 col-sm-offset-1">
  <div class="page-header">
    <h3><%= user.username %></h3>
  </div>
  <div class="col-sm-4">
    <p><%= pluralize user.calls.count, 'call', 'calls' %></p>
  </div>
  <div class="col-sm-4">
    <% if user.calls.blank? %>
      <p>No rating information available.</p>
    <% else %>
      <p><%= user.calls.average('rating').round(1) %> average rating.</p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <% distinct_offices = user.office_locations.distinct.count %>
    <p><%= user.username %> has called <%= pluralize distinct_offices, 'office', 'offices', inner_string: 'distinct' %></p>
  </div>
  <div class="col-sm-8">
    <% if user.calls.blank? %>
      <p><%= user.username %> is still waiting to make their first call.</p>
    <% else %>
      <p>Last call made <%= last_call.time %> to <a href="/reps/<%= last_call.rep.bioguide_id %>"><%= last_call.rep.official_full %></a> and was rated <%= pluralize last_call.rating, 'star', 'stars' %></p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <a href="/users/<%= user.slug %>" class="office-details-modal-button btn btn-primary btn-block">view user profile</a>
  </div>
</div>
