<div class="container">
  <div class="col-sm-6">
    <h1>
      <% if logged_in? %>Hello, <% end %><%= @user.username %>
    </h1>
  </div>
  <div class="col-sm-6">
    <h3>Calls this week: <%= @user.calls.this_week.count %></h3>
    <h3>Lifetime total: <%= @user.calls.count %></h3>
    <% unless @user.calls.blank? %>
      <h3>
        Average call rating: <%= @user.calls.average('rating') %>
      </h3>
    <% end %>
  </div>
</div>
